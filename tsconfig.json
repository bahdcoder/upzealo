{
  "extends": "adonis-preset-ts/tsconfig.json",
  "include": ["**/*"],
  "exclude": ["node_modules", "build"],
  "compilerOptions": {
    "outDir": "build",
    "rootDir": "./",
    "sourceMap": true,
    "lib": ["ES2017"],
    "resolveJsonModule": true,
    "paths": {
      "App/*": ["./app/*"],
      "Config/*": ["./config/*"],
      "Contracts/*": ["./contracts/*"],
      "Database/*": ["./database/*"],
      "Helpers/*": ["./helpers/*"]
    },
    "types": [
      "@adonisjs/core",
      "@adonisjs/repl",
      "@japa/preset-adonis/build/adonis-typings",
      "@adonisjs/auth",
      "@adonisjs/lucid",
      "adonis5-jwt",
      "@adonisjs/ally",
      "@adonisjs/lucid-slugify",
      "@adonisjs/redis",
      "@rocketseat/adonis-bull"
    ]
  }
}
